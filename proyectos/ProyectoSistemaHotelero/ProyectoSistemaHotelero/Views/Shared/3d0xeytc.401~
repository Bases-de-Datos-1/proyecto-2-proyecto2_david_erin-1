    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Variable para detectar si el usuario está autenticado
        // En tu aplicación real, esto vendría del servidor usando Razor
        let isUserLoggedIn = @(User.Identity.IsAuthenticated ? "true" : "false");
        let currentUser = {
            name: "@(User.Identity.IsAuthenticated? User.Identity.Name : "")",
            email: "@(User.Identity.IsAuthenticated? User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value ?? "" : "")"
        };

        function toggleUserMenu() {
            const dropdown = document.getElementById('userDropdown');

            if (dropdown.classList.contains('show')) {
                dropdown.classList.remove('show');
            } else {
                // Generar contenido del dropdown según el estado de autenticación
                generateDropdownContent();
                dropdown.classList.add('show');
            }
        }

        function generateDropdownContent() {
            const dropdown = document.getElementById('userDropdown');

            if (isUserLoggedIn) {
                // Usuario autenticado - mostrar opciones de cuenta
                dropdown.innerHTML = `
                    <div class="user-info">
                        <p class="user-name">${currentUser.name || 'Usuario'}</p>
                        <p class="user-email">${currentUser.email || 'email@ejemplo.com'}</p>
                    </div>
                    <a href="/Account/MiCuenta" class="dropdown-item">
                        <i class="fas fa-user-circle"></i> Mi Cuenta
                    </a>
                    <a href="#" class="dropdown-item" id="logout-link">
                        <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                    </a>
                `;
                
                // Añadir evento al enlace de logout
                setTimeout(() => {
                    const logoutLink = document.getElementById('logout-link');
                    if (logoutLink) {
                        logoutLink.addEventListener('click', function(e) {
                            e.preventDefault();
                            document.getElementById('logout-form').submit();
                        });
                    }
                }, 100);
            } else {
                // Usuario no autenticado - mostrar opciones de login/registro
                dropdown.innerHTML = `
                    <a href="/Account/Login" class="dropdown-item">
                        <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
                    </a>
                    <a href="/Account/Registro" class="dropdown-item">
                        <i class="fas fa-user-plus"></i> Registrarse
                    </a>
                `;
            }
        }

        // Cerrar dropdown al hacer clic fuera
        document.addEventListener('click', function(event) {
            const userMenu = document.querySelector('.user-menu');
            const dropdown = document.getElementById('userDropdown');

            if (!userMenu.contains(event.target)) {
                dropdown.classList.remove('show');
            }
        });

        // Prevenir que el form de logout cierre el dropdown antes de enviarse
        document.addEventListener('submit', function(event) {
            if (event.target.closest('.dropdown-item')) {
                // Permitir que el form se envíe normalmente
                return true;
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
