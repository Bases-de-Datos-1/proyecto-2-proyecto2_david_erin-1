                        <i class="fas fa-upload"></i>
                    </div>
                    <div class="upload-text">Cargar Imágenes</div>
                    <div class="upload-help">Haz clic o arrastra imágenes aquí</div>
                    <input type="file" id="fileInput" name="imagenes" multiple accept="image/*" class="file-input">
                </div>

                <div class="image-preview" id="imagePreview">
                    <!-- Las previsualizaciones se añadirán aquí -->
                </div>

                <button type="submit" class="siguiente-btn" id="submitBtn" disabled>Siguiente</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const fileInput = document.getElementById('fileInput');
            const uploadArea = document.getElementById('uploadArea');
            const imagePreview = document.getElementById('imagePreview');
            const submitBtn = document.getElementById('submitBtn');

            // Verificar si hay imágenes cargadas para habilitar/deshabilitar el botón
            function checkSubmitButton() {
                submitBtn.disabled = imagePreview.children.length === 0;
            }

            // Manejo de arrastrar y soltar
            uploadArea.addEventListener('dragover', function(e) {
                e.preventDefault();
                uploadArea.style.borderColor = '#62B1B1';
                uploadArea.style.backgroundColor = '#f0f9f8';
            });

            uploadArea.addEventListener('dragleave', function(e) {
                e.preventDefault();
                uploadArea.style.borderColor = '#ddd';
                uploadArea.style.backgroundColor = '#fafafa';
            });

            uploadArea.addEventListener('drop', function(e) {
                e.preventDefault();
                uploadArea.style.borderColor = '#ddd';
                uploadArea.style.backgroundColor = '#fafafa';

                const dt = e.dataTransfer;
                const files = dt.files;

                if (files.length) {
                    fileInput.files = files;
                    handleFiles(files);
                }
            });

            // Manejo de selección por clic
            fileInput.addEventListener('change', function() {
                handleFiles(this.files);
            });

            // Procesar los archivos
            function handleFiles(files) {
                if (!files || files.length === 0) return;

                Array.from(files).forEach(file => {
                    if (!file.type.match('image.*')) return;

                    const reader = new FileReader();
                    reader.onload = function(e) {
                        createPreviewItem(e.target.result);
                    };
                    reader.readAsDataURL(file);
                });

                checkSubmitButton();
            }

            // Crear elemento de previsualización
            function createPreviewItem(imgSrc) {
                const previewItem = document.createElement('div');
                previewItem.className = 'preview-item';

                const img = document.createElement('img');
                img.src = imgSrc;
                img.className = 'preview-img';
                previewItem.appendChild(img);

                const removeBtn = document.createElement('button');
                removeBtn.className = 'remove-img';
                removeBtn.innerHTML = '<i class="fas fa-times"></i>';
                removeBtn.type = 'button';
                removeBtn.addEventListener('click', function() {
                    previewItem.remove();
                    checkSubmitButton();
                });
                previewItem.appendChild(removeBtn);

                imagePreview.appendChild(previewItem);
            }

            // Inicializar
            checkSubmitButton();
        });
    </script>
}