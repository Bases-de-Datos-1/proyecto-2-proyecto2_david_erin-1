@using ProyectoSistemaHotelero.Models.ViewModels
@model DetalleActividadViewModel
@{
    ViewData["Title"] = $"{Model.NombreEmpresa} - UTravel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .detalle-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 120px 20px 50px;
    }

    /* Galería de fotos */
    .galeria-fotos {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr;
        grid-template-rows: 1fr 1fr;
        gap: 8px;
        height: 400px;
        margin-bottom: 30px;
        border-radius: 15px;
        overflow: hidden;
    }

    .foto-principal {
        grid-row: 1 / 3;
        background-size: cover;
        background-position: center;
        position: relative;
    }

    .foto-secundaria {
        background-size: cover;
        background-position: center;
        position: relative;
    }

    .mas-fotos {
        position: absolute;
        bottom: 15px;
        right: 15px;
        background: rgba(0,0,0,0.8);
        color: white;
        padding: 8px 15px;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        font-size: 14px;
    }

    /* Layout principal */
    .contenido-principal {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 40px;
        margin-top: 30px;
    }

    /* Información de la actividad */
    .info-actividad {
        background: white;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .actividad-info {
        margin-bottom: 30px;
        padding-bottom: 30px;
        border-bottom: 1px solid #e0e0e0;
    }

    .titulo-actividad {
        font-size: 24px;
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
    }

    .ubicacion-actividad {
        color: #666;
        font-size: 16px;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .descripcion-actividad {
        color: #666;
        line-height: 1.6;
        margin-bottom: 25px;
    }

    .precio-info {
        background: #e8f6f3;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 25px;
        text-align: center;
    }

    .precio-total {
        font-size: 28px;
        font-weight: 700;
        color: #7db8b3;
        margin: 0;
    }

    .precio-descripcion {
        color: #666;
        font-size: 14px;
        margin-top: 5px;
    }

    /* Tipos de actividad */
    .tipos-titulo {
        font-size: 18px;
        font-weight: 600;
        color: #333;
        margin-bottom: 15px;
    }

    .tipos-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
        margin-bottom: 25px;
    }

    .tipo-item {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
        border-left: 4px solid #7db8b3;
    }

    .tipo-nombre {
        font-weight: 600;
        color: #333;
        margin-bottom: 5px;
    }

    .tipo-descripcion {
        font-size: 13px;
        color: #666;
        line-height: 1.4;
    }

    /* Servicios */
    .servicios-titulo {
        font-size: 18px;
        font-weight: 600;
        color: #333;
        margin-bottom: 15px;
    }

    .servicios-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 12px 20px;
        margin-bottom: 20px;
    }

    .servicio-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 5px 0;
    }

    .servicio-icon {
        width: 20px;
        height: 20px;
        color: #7db8b3;
        font-size: 16px;
    }

    .servicio-texto {
        color: #333;
        font-size: 14px;
    }

    /* Panel de contacto */
    .panel-contacto {
        background: #7db8b3;
        padding: 25px;
        border-radius: 15px;
        color: white;
        position: sticky;
        top: 140px;
        height: fit-content;
    }

    .contacto-titulo {
        font-size: 20px;
        font-weight: 600;
        margin-bottom: 20px;
        text-align: center;
    }

    .contacto-empresa {
        background: rgba(255,255,255,0.1);
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .empresa-nombre {
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 5px;
    }

    .empresa-contacto {
        font-size: 14px;
        opacity: 0.9;
    }

    .contacto-item {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 15px;
        font-size: 14px;
    }

    .contacto-icon {
        width: 16px;
        font-size: 14px;
    }

    .btn-contactar {
        width: 100%;
        background: #333;
        color: white;
        border: none;
        border-radius: 12px;
        padding: 15px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 10px;
    }

        .btn-contactar:hover {
            background: #555;
            transform: translateY(-1px);
        }

    .header-actividad {
        background: white;
        padding: 25px 30px;
        border-radius: 15px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        margin-bottom: 20px;
    }

    .nombre-empresa {
        font-size: 28px;
        font-weight: 700;
        color: #333;
        margin-bottom: 8px;
    }

    .ubicacion-empresa {
        color: #666;
        font-size: 16px;
        display: flex;
        align-items: center;
        gap: 8px;
    }
</style>

<div class="detalle-container">
    <!-- Header de la empresa -->
    <div class="header-actividad">
        <h1 class="nombre-empresa">@Model.NombreEmpresa</h1>
        <div class="ubicacion-empresa">
            <i class="fas fa-map-marker-alt"></i>
            @Model.UbicacionCompleta
        </div>
    </div>

    <!-- Galería de fotos -->
    @if (Model.FotosActividad.Any())
    {
        <div class="galeria-fotos">
            <div class="foto-principal" style="background-image: url('@Model.FotosActividad.First()')"></div>

            @for (int i = 1; i < Math.Min(Model.FotosActividad.Count, 5); i++)
            {
                <div class="foto-secundaria" style="background-image: url('@Model.FotosActividad[i]')">
                    @if (i == 4)
                    {
                        <div class="mas-fotos">
                            +2 Más Photos
                        </div>
                    }
                </div>
            }
        </div>
    }

    <!-- Contenido principal -->
    <div class="contenido-principal">
        <!-- Información de la actividad -->
        <div class="info-actividad">
            <div class="actividad-info">
                <h2 class="titulo-actividad">Descripción de la actividad</h2>
                <p class="descripcion-actividad">@Model.Descripcion</p>

                <div class="precio-info">
                    <div class="precio-total">Total: ₡@Model.Precio.ToString("N0")</div>
                    <div class="precio-descripcion">Precio de la actividad</div>
                </div>

                <div class="ubicacion-actividad">
                    <i class="fas fa-map-marker-alt"></i>
                    @Model.DireccionCompleta
                </div>
            </div>

            @if (Model.TiposActividad.Any())
            {
                <h3 class="tipos-titulo">Tipos de Actividad</h3>
                <div class="tipos-grid">
                    @foreach (var tipo in Model.TiposActividad)
                    {
                        <div class="tipo-item">
                            <div class="tipo-nombre">@tipo.Nombre</div>
                            @if (!string.IsNullOrEmpty(tipo.Descripcion))
                            {
                                <div class="tipo-descripcion">@tipo.Descripcion</div>
                            }
                        </div>
                    }
                </div>
            }

            @if (Model.ServiciosIncluidos.Any())
            {
                <h3 class="servicios-titulo">Servicios Incluidos</h3>
                <div class="servicios-grid">
                    @foreach (var servicio in Model.ServiciosIncluidos)
                    {
                        <div class="servicio-item">
                            <i class="@GetIconForService(servicio) servicio-icon"></i>
                            <span class="servicio-texto">@servicio</span>
                        </div>
                    }
                </div>
            }
        </div>

        <!-- Panel de contacto -->
        <div class="panel-contacto">
            <h3 class="contacto-titulo">Contacto</h3>

            <div class="contacto-empresa">
                <div class="empresa-nombre">@Model.NombreContacto</div>
                <div class="empresa-contacto">Uvita Tour Guide</div>
            </div>

            <div class="contacto-item">
                <i class="fas fa-envelope contacto-icon"></i>
                <span>@Model.CorreoElectronico</span>
            </div>

            @if (!string.IsNullOrEmpty(Model.Telefono))
            {
                <div class="contacto-item">
                    <i class="fas fa-phone contacto-icon"></i>
                    <span>@Model.Telefono</span>
                </div>
            }

            <div class="contacto-item">
                <i class="fas fa-user contacto-icon"></i>
                <span>@Model.NombreContacto</span>
            </div>

            <button class="btn-contactar" onclick="contactarEmpresa()">
                Contactar Ahora
            </button>
        </div>
    </div>
</div>

@functions {
    public string GetIconForService(string serviceName)
    {
        return serviceName.ToLower() switch
        {
            var name when name.Contains("hidratación") => "fas fa-tint",
            var name when name.Contains("refrigerio") => "fas fa-apple-alt",
            var name when name.Contains("guía") => "fas fa-user-friends",
            var name when name.Contains("snorkel") => "fas fa-swimmer",
            var name when name.Contains("tour") => "fas fa-route",
            var name when name.Contains("costero") => "fas fa-water",
            var name when name.Contains("senderismo") => "fas fa-hiking",
            var name when name.Contains("transporte") => "fas fa-bus",
            var name when name.Contains("equipo") => "fas fa-tools",
            _ => "fas fa-check"
        };
    }
}

@section Scripts {
    <script>
        function contactarEmpresa() {
            // Crear mensaje para WhatsApp o email
            const empresa = '@Model.NombreEmpresa';
            const contacto = '@Model.NombreContacto';
            const mensaje = `Hola, estoy interesado en la actividad "${empresa}". ¿Podrían brindarme más información?`;

            // Si hay teléfono, abrir WhatsApp, sino abrir email
            const telefono = '@Model.Telefono';
            if (telefono && telefono !== '') {
                const telefonoLimpio = telefono.replace(/\D/g, ''); // Solo números
                const whatsappUrl = `https://wa.me/506${telefonoLimpio}?text=${encodeURIComponent(mensaje)}`;
                window.open(whatsappUrl, '_blank');
            } else {
                const emailUrl = `mailto:@Model.CorreoElectronico?subject=Consulta sobre ${empresa}&body=${encodeURIComponent(mensaje)}`;
                window.open(emailUrl, '_blank');
            }
        }

        function volverBusqueda() {
            history.back();
        }
    </script>
}